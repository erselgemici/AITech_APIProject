@using AITech.WebUI.DTOs.ChooseDtos
@model ResultChooseDto

<div class="container-fluid bg-primary feature pt-5">
    <div class="container pt-5">
        <div class="row g-5">
            <div class="col-lg-6 align-self-center mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">
                <div class="btn btn-sm border rounded-pill text-white px-3 mb-3">Neden Biz?</div>
                @if (Model != null)
                {
                    <h1 class="text-white mb-4">@Model.Title</h1>
                    <p class="text-light mb-4">@Model.Description</p>

                    @if (!string.IsNullOrEmpty(Model.Item1))
                    {
                        <div class="d-flex align-items-center text-white mb-3">
                            <div class="btn-sm-square bg-white text-primary rounded-circle me-3"><i class="fa fa-check"></i></div>
                            <span>@Model.Item1</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Item2))
                    {
                        <div class="d-flex align-items-center text-white mb-3">
                            <div class="btn-sm-square bg-white text-primary rounded-circle me-3"><i class="fa fa-check"></i></div>
                            <span>@Model.Item2</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Item3))
                    {
                        <div class="d-flex align-items-center text-white mb-3">
                            <div class="btn-sm-square bg-white text-primary rounded-circle me-3"><i class="fa fa-check"></i></div>
                            <span>@Model.Item3</span>
                        </div>
                    }
                }

                <div class="row g-4 pt-3">
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-users fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">1907</h2>
                                <p class="text-white mb-0">Mutlu Müşteri</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="d-flex rounded p-3" style="background: rgba(256, 256, 256, 0.1);">
                            <i class="fa fa-check fa-3x text-white"></i>
                            <div class="ms-3">
                                <h2 class="text-white mb-0" data-toggle="counter-up">1907</h2>
                                <p class="text-white mb-0">Tamamlanan Proje</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 align-self-end text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                @if (Model != null)
                {
                    <img class="img-fluid" src="@Model.ImageUrl" alt="">
                }
            </div>
        </div>
    </div>
</div>
