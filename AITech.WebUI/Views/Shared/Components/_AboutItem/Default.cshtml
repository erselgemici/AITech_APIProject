@using AITech.WebUI.DTOs.AboutItemDtos
@model List<ResultAboutItemDto>

<div class="row g-3">
    @* Listeyi ikiye bölüyoruz *@
    @{
        var firstColumn = Model.Take(Model.Count / 2 + Model.Count % 2).ToList();
        var secondColumn = Model.Skip(Model.Count / 2 + Model.Count % 2).ToList();
    }

    <div class="col-sm-6">
        @foreach (var item in firstColumn)
        {
            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>@item.Title</h6>
        }
    </div>

    <div class="col-sm-6">
        @foreach (var item in secondColumn)
        {
            <h6 class="mb-3"><i class="fa fa-check text-primary me-2"></i>@item.Title</h6>
        }
    </div>
</div>
