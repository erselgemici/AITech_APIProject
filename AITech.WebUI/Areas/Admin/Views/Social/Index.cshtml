@model List<AITech.WebUI.DTOs.SocialDtos.ResultSocialDto>
@{
    ViewData["Title"] = "Sosyal Medya Hesapları";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-4xl">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Sosyal Medya</h2>
            <p class="text-sm text-slate-400 mt-1">Footer ve iletişim alanlarındaki bağlantılar.</p>
        </div>
        <a href="/Admin/Social/CreateSocial" class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-medium shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all flex items-center gap-2">
            <span class="material-symbols-outlined text-xl">add_link</span>
            Yeni Hesap Ekle
        </a>
    </div>

    <div class="glass-card rounded-2xl p-6 border border-white/5 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="text-xs uppercase text-secondary font-bold tracking-wider border-b border-white/5">
                    <th class="py-4 pl-4 w-16">İkon</th>
                    <th class="py-4 w-1/4">Platform Adı</th>
                    <th class="py-4">Bağlantı (URL)</th>
                    <th class="py-4 text-right pr-4 w-32">İşlemler</th>
                </tr>
            </thead>
            <tbody class="text-sm text-slate-300">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors border-b border-white/5 last:border-0">
                            <td class="py-4 pl-4 align-middle">
                                <div class="size-10 rounded-lg bg-white/5 flex items-center justify-center text-white border border-white/10">
                                    <i class="@item.Icon text-lg"></i>
                                </div>
                            </td>
                            <td class="py-4 font-bold text-white align-middle">@item.Name</td>
                            <td class="py-4 text-slate-400 align-middle truncate max-w-xs">
                                <a href="@item.Url" target="_blank" class="hover:text-primary transition-colors flex items-center gap-1">
                                    @item.Url
                                    <span class="material-symbols-outlined text-[12px]">open_in_new</span>
                                </a>
                            </td>
                            <td class="py-4 text-right pr-4 align-middle">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="/Admin/Social/UpdateSocial/@item.Id" class="size-9 rounded-lg bg-emerald-500/10 text-emerald-500 hover:bg-emerald-500 hover:text-white flex items-center justify-center transition-all border border-emerald-500/20">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                    <button onclick="deleteAction('/Admin/Social/DeleteSocial/@item.Id')" class="size-9 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white flex items-center justify-center transition-all border border-red-500/20">
                                        <span class="material-symbols-outlined text-lg">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="py-8 text-center text-slate-500">Kayıtlı hesap bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
