@model List<AITech.WebUI.DTOs.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-4xl">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Kategoriler</h2>
            <p class="text-sm text-slate-400 mt-1">Projelerinizi gruplandırmak için kullanılan kategoriler.</p>
        </div>
        <a href="/Admin/Category/CreateCategory" class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-medium shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all flex items-center gap-2">
            <span class="material-symbols-outlined text-xl">add_circle</span>
            Yeni Kategori Ekle
        </a>
    </div>

    <div class="glass-card rounded-2xl p-6 border border-white/5 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="text-xs uppercase text-secondary font-bold tracking-wider border-b border-white/5">
                    <th class="py-4 pl-4 w-16">#</th>
                    <th class="py-4">Kategori Adı</th>
                    <th class="py-4 text-right pr-4 w-32">İşlemler</th>
                </tr>
            </thead>
            <tbody class="text-sm text-slate-300">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="hover:bg-white/5 transition-colors border-b border-white/5 last:border-0">
                            <td class="py-4 pl-4 font-medium text-slate-500">@item.Id</td>
                            <td class="py-4 font-bold text-white flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary text-sm">label</span>
                                @item.Name
                            </td>
                            <td class="py-4 text-right pr-4">
                                <div class="flex items-center justify-end gap-2">
                                    <a href="/Admin/Category/UpdateCategory/@item.Id" class="size-9 rounded-lg bg-emerald-500/10 text-emerald-500 hover:bg-emerald-500 hover:text-white flex items-center justify-center transition-all border border-emerald-500/20">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                    <button onclick="deleteAction('/Admin/Category/DeleteCategory/@item.Id')" class="size-9 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white flex items-center justify-center transition-all border border-red-500/20">
                                        <span class="material-symbols-outlined text-lg">delete</span>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="py-8 text-center text-slate-500">
                            Henüz hiç kategori eklenmemiş.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
