@model AITech.WebUI.DTOs.AboutDtos.UpdateAboutDto
@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-2xl">
    <a href="/Admin/About/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10 relative overflow-hidden">
        <h2 class="text-2xl font-bold text-white mb-1 flex items-center gap-2">
            <span class="material-symbols-outlined text-secondary">edit_note</span>
            İçeriği Güncelle
        </h2>

        <form method="post" class="mt-8">
            <input type="hidden" asp-for="Id" />

            <div class="space-y-5">
                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Başlık</label>
                    <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all" />
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Görsel URL</label>
                    <input type="text" asp-for="ImageUrl" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all" />
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Açıklama</label>
                    <textarea asp-for="Description" rows="5" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all resize-none"></textarea>
                </div>

                <button type="submit" class="w-full mt-4 py-3.5 rounded-xl bg-white/10 text-white font-bold border border-white/10 hover:bg-secondary hover:border-secondary hover:shadow-lg hover:shadow-secondary/30 transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">update</span>
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
