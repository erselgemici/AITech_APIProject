@model List<AITech.WebUI.DTOs.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Hakkımızda Yazıları</h2>
            <p class="text-sm text-slate-400 mt-1">Kurumsal hakkımızda içeriklerini buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/About/CreateAbout" class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-medium shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all flex items-center gap-2">
            <span class="material-symbols-outlined text-xl">add</span>
            Yeni İçerik Ekle
        </a>
    </div>

    <div class="glass-card rounded-2xl p-6 border border-white/5 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-xs uppercase text-secondary font-bold tracking-wider border-b border-white/5">
                        <th class="py-4 pl-4 w-20">Görsel</th>
                        <th class="py-4 w-1/4">Başlık</th>
                        <th class="py-4">Açıklama</th>
                        <th class="py-4 text-right pr-4 w-32">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="text-sm text-slate-300">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/5 transition-colors border-b border-white/5 last:border-0">
                                <td class="py-4 pl-4 align-top">
                                    <img src="@item.ImageUrl" class="size-12 rounded-lg object-cover border border-white/10" alt="About Image" />
                                </td>
                                <td class="py-4 font-bold text-white align-top">@item.Title</td>
                                <td class="py-4 text-slate-400 align-top whitespace-normal">@item.Description</td>
                                <td class="py-4 text-right pr-4 align-top">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="/Admin/About/UpdateAbout/@item.Id" class="size-9 rounded-lg bg-emerald-500/10 text-emerald-500 hover:bg-emerald-500 hover:text-white flex items-center justify-center transition-all border border-emerald-500/20">
                                            <span class="material-symbols-outlined text-lg">edit</span>
                                        </a>
                                        <button onclick="deleteAction('/Admin/About/DeleteAbout/@item.Id')" class="size-9 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white flex items-center justify-center transition-all border border-red-500/20">
                                            <span class="material-symbols-outlined text-lg">delete</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
