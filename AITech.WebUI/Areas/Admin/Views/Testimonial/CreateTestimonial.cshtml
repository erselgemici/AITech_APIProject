@model AITech.WebUI.DTOs.TestimonialDtos.CreateTestimonialDto
@{
    ViewData["Title"] = "Yeni Referans Ekle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-2xl">
    <a href="/Admin/Testimonial/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 size-32 bg-primary/10 rounded-full blur-3xl -mr-10 -mt-10 pointer-events-none"></div>

        <h2 class="text-2xl font-bold text-white mb-1 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">person_add</span>
            Yeni Müşteri Yorumu
        </h2>

        <form method="post" class="mt-8">
            <div class="space-y-6">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="group">
                        <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Ad Soyad</label>
                        <input type="text" asp-for="Name" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary transition-all" placeholder="Örn: Ahmet Yılmaz" />
                    </div>
                    <div class="group">
                        <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Ünvan</label>
                        <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary transition-all" placeholder="Örn: CEO, Tech Corp" />
                    </div>
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Profil Fotoğrafı URL</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500">face</span>
                        <input type="text" asp-for="ImageUrl" class="w-full bg-slate-900/50 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:border-primary transition-all" placeholder="/img/client-1.jpg" />
                    </div>
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Yorum</label>
                    <textarea asp-for="Comment" rows="4" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary transition-all resize-none" placeholder="Müşterinin yorumunu buraya giriniz..."></textarea>
                </div>

                <button type="submit" class="w-full py-3.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-bold shadow-lg shadow-primary/25 hover:shadow-primary/50 transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">save</span>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>
