@model AITech.WebUI.DTOs.ChooseDtos.CreateChooseDto
@{
    ViewData["Title"] = "Yeni Özellik Ekle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-3xl">
    <a href="/Admin/Choose/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 size-32 bg-primary/10 rounded-full blur-3xl -mr-10 -mt-10 pointer-events-none"></div>

        <h2 class="text-2xl font-bold text-white mb-1 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">add_circle</span>
            Yeni Özellik Bloğu
        </h2>
        <p class="text-sm text-slate-400 mb-8">Neden bizi seçmeliler? Detayları giriniz.</p>

        <form method="post">
            <div class="space-y-6">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="group">
                        <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Başlık</label>
                        <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" placeholder="Örn: Uzman Kadro" />
                    </div>

                    <div class="group">
                        <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">İkon/Görsel URL</label>
                        <div class="relative">
                            <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500">image</span>
                            <input type="text" asp-for="ImageUrl" class="w-full bg-slate-900/50 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" placeholder="/img/choose-1.jpg" />
                        </div>
                    </div>
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Açıklama</label>
                    <textarea asp-for="Description" rows="3" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all resize-none"></textarea>
                </div>

                <div class="p-5 bg-white/5 rounded-xl border border-white/5">
                    <label class="block text-xs uppercase font-bold text-slate-400 mb-4 tracking-wider">Alt Özellikler (Maddeler)</label>
                    <div class="space-y-4">
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-secondary">looks_one</span>
                            <input type="text" asp-for="Item1" class="w-full bg-slate-900/50 border border-white/10 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-secondary transition-all" placeholder="1. Özellik" />
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-secondary">looks_two</span>
                            <input type="text" asp-for="Item2" class="w-full bg-slate-900/50 border border-white/10 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-secondary transition-all" placeholder="2. Özellik" />
                        </div>
                        <div class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-secondary">looks_3</span>
                            <input type="text" asp-for="Item3" class="w-full bg-slate-900/50 border border-white/10 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-secondary transition-all" placeholder="3. Özellik" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full py-3.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-bold shadow-lg shadow-primary/25 hover:shadow-primary/50 transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">save</span>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>
