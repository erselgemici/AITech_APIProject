@model List<AITech.WebUI.DTOs.ChooseDtos.ResultChooseDto>
@{
    ViewData["Title"] = "Neden Biz Listesi";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto">
    <div class="flex items-center justify-between mb-6">
        <div>
            <h2 class="text-2xl font-bold text-white tracking-tight">Neden Biz?</h2>
            <p class="text-sm text-slate-400 mt-1">Hakkımızda sayfasındaki özellik kutularını yönetin.</p>
        </div>
        <a href="/Admin/Choose/CreateChoose" class="px-5 py-2.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-medium shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all flex items-center gap-2">
            <span class="material-symbols-outlined text-xl">add_circle</span>
            Yeni Ekle
        </a>
    </div>

    <div class="glass-card rounded-2xl p-6 border border-white/5 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="text-xs uppercase text-secondary font-bold tracking-wider border-b border-white/5">
                        <th class="py-4 pl-4 w-20">İkon/Resim</th>
                        <th class="py-4 w-1/4">Başlık</th>
                        <th class="py-4">Maddeler</th>
                        <th class="py-4 text-right pr-4 w-32">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="text-sm text-slate-300">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="hover:bg-white/5 transition-colors border-b border-white/5 last:border-0">
                                <td class="py-4 pl-4 align-top">
                                    <div class="size-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center overflow-hidden">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="w-full h-full object-cover" />
                                        }
                                        else
                                        {
                                            <span class="material-symbols-outlined text-slate-500">image_not_supported</span>
                                        }
                                    </div>
                                </td>
                                <td class="py-4 font-bold text-white align-top">@item.Title</td>
                                <td class="py-4 text-slate-400 align-top">
                                    <ul class="list-disc list-inside space-y-1 text-xs">
                                        @if (!string.IsNullOrEmpty(item.Item1))
                                        {
                                            <li>@item.Item1</li>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Item2))
                                        {
                                            <li>@item.Item2</li>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Item3))
                                        {
                                            <li>@item.Item3</li>
                                        }
                                    </ul>
                                </td>
                                <td class="py-4 text-right pr-4 align-top">
                                    <div class="flex items-center justify-end gap-2">
                                        <a href="/Admin/Choose/UpdateChoose/@item.Id" class="size-9 rounded-lg bg-emerald-500/10 text-emerald-500 hover:bg-emerald-500 hover:text-white flex items-center justify-center transition-all border border-emerald-500/20">
                                            <span class="material-symbols-outlined text-lg">edit</span>
                                        </a>
                                        <button onclick="deleteAction('/Admin/Choose/DeleteChoose/@item.Id')" class="size-9 rounded-lg bg-red-500/10 text-red-500 hover:bg-red-500 hover:text-white flex items-center justify-center transition-all border border-red-500/20">
                                            <span class="material-symbols-outlined text-lg">delete</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
