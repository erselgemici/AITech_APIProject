@model AITech.WebUI.DTOs.AboutItemDtos.UpdateAboutItemDto
@{
    ViewData["Title"] = "Madde Güncelle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-lg">
    <a href="/Admin/AboutItem/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined text-secondary">edit</span>
            Maddeyi Düzenle
        </h2>

        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="space-y-5">
                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Madde İçeriği</label>
                    <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all" />
                </div>

                <button type="submit" class="w-full mt-2 py-3 rounded-xl bg-white/10 text-white font-bold border border-white/10 hover:bg-secondary hover:border-secondary transition-all">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
