@model AITech.WebUI.DTOs.AboutItemDtos.CreateAboutItemDto
@{
    ViewData["Title"] = "Madde Ekle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-lg">
    <a href="/Admin/AboutItem/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">playlist_add</span>
            Yeni Madde
        </h2>

        <form method="post">
            <div class="space-y-5">
                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Madde İçeriği</label>
                    <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" placeholder="Örn: 7/24 Teknik Destek" />
                </div>

                <button type="submit" class="w-full mt-2 py-3 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-bold shadow-lg hover:shadow-primary/50 transition-all">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>
