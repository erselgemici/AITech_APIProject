@model AITech.WebUI.DTOs.ProjectDtos.CreateProjectDto
@{
    ViewData["Title"] = "Yeni Proje Ekle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-2xl">
    <a href="/Admin/Project/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 size-32 bg-primary/10 rounded-full blur-3xl -mr-10 -mt-10 pointer-events-none"></div>

        <h2 class="text-2xl font-bold text-white mb-1 flex items-center gap-2">
            <span class="material-symbols-outlined text-primary">add_box</span>
            Yeni Proje Oluştur
        </h2>
        <p class="text-sm text-slate-400 mb-8">Proje detaylarını giriniz ve kategori seçiniz.</p>

        <form method="post">
            <div class="space-y-6">

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Proje Adı</label>
                    <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all placeholder-slate-600" placeholder="Örn: E-Ticaret Sitesi" />
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Kategori</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500">category</span>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="w-full bg-slate-900/50 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all appearance-none cursor-pointer">
                            <option value="" disabled selected>Kategori Seçiniz</option>
                        </select>
                        <span class="material-symbols-outlined absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 pointer-events-none">expand_more</span>
                    </div>
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Görsel URL</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500">image</span>
                        <input type="text" asp-for="ImageUrl" class="w-full bg-slate-900/50 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all placeholder-slate-600" placeholder="/img/project-1.jpg" />
                    </div>
                </div>

                <button type="submit" class="w-full py-3.5 rounded-xl bg-gradient-to-r from-accent-gradient-start to-accent-gradient-end text-white font-bold shadow-lg shadow-primary/25 hover:shadow-primary/50 transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">save</span>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Select içindeki optionlar dark modda görünsün diye */
    select option {
        background-color: #0f172a;
        color: white;
        padding: 10px;
    }
</style>
