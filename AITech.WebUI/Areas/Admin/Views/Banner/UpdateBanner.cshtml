@model AITech.WebUI.DTOs.BannerDtos.UpdateBannerDto
@{
    ViewData["Title"] = "Banner Güncelle";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="container mx-auto max-w-2xl">
    <a href="/Admin/Banner/Index" class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-6 transition-colors text-sm font-medium">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Listeye Dön
    </a>

    <div class="glass-card rounded-2xl p-8 border border-white/10 relative overflow-hidden">
        <div class="absolute top-0 right-0 size-40 bg-secondary/10 rounded-full blur-3xl -mr-10 -mt-10 pointer-events-none"></div>

        <h2 class="text-2xl font-bold text-white mb-1 flex items-center gap-2">
            <span class="material-symbols-outlined text-secondary">edit_note</span>
            Banner Düzenle
        </h2>

        <form method="post" class="mt-8">
            <input type="hidden" asp-for="Id" />

            <div class="space-y-6">
                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Banner Başlığı</label>
                    <input type="text" asp-for="Title" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all" />
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Görsel URL</label>
                    <div class="flex gap-4 items-start">
                        <div class="relative flex-1">
                            <span class="material-symbols-outlined absolute left-4 top-1/2 -translate-y-1/2 text-slate-500">image</span>
                            <input type="text" asp-for="ImageUrl" class="w-full bg-slate-900/50 border border-white/10 rounded-xl pl-12 pr-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all" />
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="h-12 w-20 rounded-lg object-cover border border-white/20" title="Mevcut Görsel" />
                        }
                    </div>
                </div>

                <div class="group">
                    <label class="block text-xs uppercase font-bold text-secondary mb-2 tracking-wider">Açıklama</label>
                    <textarea asp-for="Description" rows="4" class="w-full bg-slate-900/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-secondary focus:ring-1 focus:ring-secondary transition-all resize-none"></textarea>
                </div>

                <div class="flex items-center gap-3 p-4 bg-white/5 rounded-xl border border-white/5">
                    <div class="relative inline-block w-12 mr-2 align-middle select-none">
                        <input type="checkbox" asp-for="IsActive" id="toggle_update" class="toggle-checkbox absolute block w-6 h-6 rounded-full bg-white border-4 appearance-none cursor-pointer transition-all duration-300" />
                        <label for="toggle_update" class="toggle-label block overflow-hidden h-6 rounded-full bg-slate-700 cursor-pointer border border-slate-500"></label>
                    </div>
                    <label for="toggle_update" class="text-sm font-bold text-white cursor-pointer select-none">Yayında</label>
                </div>

                <button type="submit" class="w-full py-3.5 rounded-xl bg-white/5 text-white font-bold border border-white/10 hover:bg-secondary hover:border-secondary hover:shadow-lg hover:shadow-secondary/30 hover:scale-[1.01] active:scale-[0.98] transition-all flex items-center justify-center gap-2">
                    <span class="material-symbols-outlined">update</span>
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Custom Toggle Switch CSS */
    .toggle-checkbox:checked {
        right: 0;
        border-color: #15ACE1;
    }
        /* Update'de Secondary renk */
        .toggle-checkbox:checked + .toggle-label {
            background-color: #15ACE1;
            border-color: #15ACE1;
        }

    .toggle-checkbox {
        right: 50%;
    }
</style>
