@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

    <div class="glass-card p-6 rounded-2xl flex items-center gap-4 hover:bg-white/5 transition-all group cursor-pointer border border-white/5 hover:border-primary/30">
        <div class="size-14 rounded-xl bg-primary/20 flex items-center justify-center group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(19,99,198,0.2)]">
            <span class="material-symbols-outlined text-3xl text-primary">groups</span>
        </div>
        <div>
            <h3 class="text-3xl font-bold text-white tracking-tight">@ViewBag.TestimonialCount</h3>
            <p class="text-sm text-slate-400 font-medium uppercase tracking-wider">Mutlu Müşteri</p>
        </div>
    </div>

    <div class="glass-card p-6 rounded-2xl flex items-center gap-4 hover:bg-white/5 transition-all group cursor-pointer border border-white/5 hover:border-secondary/30">
        <div class="size-14 rounded-xl bg-secondary/20 flex items-center justify-center group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(21,172,225,0.2)]">
            <span class="material-symbols-outlined text-3xl text-secondary">account_tree</span>
        </div>
        <div>
            <h3 class="text-3xl font-bold text-white tracking-tight">@ViewBag.ProjectCount</h3>
            <p class="text-sm text-slate-400 font-medium uppercase tracking-wider">Toplam Proje</p>
        </div>
    </div>

    <div class="glass-card p-6 rounded-2xl flex items-center gap-4 hover:bg-white/5 transition-all group cursor-pointer border border-white/5 hover:border-emerald-500/30">
        <div class="size-14 rounded-xl bg-emerald-500/20 flex items-center justify-center group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(16,185,129,0.2)]">
            <span class="material-symbols-outlined text-3xl text-emerald-400">featured_play_list</span>
        </div>
        <div>
            <h3 class="text-3xl font-bold text-white tracking-tight">@ViewBag.FeatureCount</h3>
            <p class="text-sm text-slate-400 font-medium uppercase tracking-wider">Hizmetlerimiz</p>
        </div>
    </div>

    <div class="glass-card p-6 rounded-2xl flex items-center gap-4 hover:bg-white/5 transition-all group cursor-pointer border border-white/5 hover:border-orange-500/30">
        <div class="size-14 rounded-xl bg-orange-500/20 flex items-center justify-center group-hover:scale-110 transition-transform shadow-[0_0_15px_rgba(249,115,22,0.2)]">
            <span class="material-symbols-outlined text-3xl text-orange-400">category</span>
        </div>
        <div>
            <h3 class="text-3xl font-bold text-white tracking-tight">@ViewBag.CategoryCount</h3>
            <p class="text-sm text-slate-400 font-medium uppercase tracking-wider">Aktif Kategori</p>
        </div>
    </div>
</div>

<div class="w-full">

    <div class="glass-card rounded-2xl p-6 border border-white/5">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">history</span>
                Son Eklenen Projeler
            </h2>
            <a href="/Admin/Project/Index" class="px-4 py-2 rounded-full bg-white/5 text-slate-300 text-xs font-bold hover:bg-primary hover:text-white transition-all border border-white/10">
                Tümünü Gör
            </a>
        </div>

        <div class="table-container overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left border-b border-white/10">
                        <th class="pb-3 text-secondary text-xs uppercase font-bold tracking-wider pl-4">Proje Adı</th>
                        <th class="pb-3 text-secondary text-xs uppercase font-bold tracking-wider">Kategori</th>
                        <th class="pb-3 text-secondary text-xs uppercase font-bold tracking-wider text-right pr-4">İşlem</th>
                    </tr>
                </thead>
                <tbody class="text-sm">
                    @if (ViewBag.LastProjects != null)
                    {
                        foreach (var item in ViewBag.LastProjects)
                        {
                            <tr class="hover:bg-white/5 transition-colors border-b border-white/5 last:border-0">
                                <td class="py-4 pl-4 font-medium text-white flex items-center gap-3">
                                    <div class="size-10 rounded-lg bg-white/5 border border-white/10 overflow-hidden flex items-center justify-center">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="w-full h-full object-cover" />
                                        }
                                        else
                                        {
                                            <span class="material-symbols-outlined text-slate-500">image</span>
                                        }
                                    </div>
                                    @item.Title
                                </td>
                                <td class="py-4 text-slate-400">
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-slate-800 border border-white/5 text-xs">
                                        <span class="material-symbols-outlined text-[10px] text-secondary">label</span>
                                        @(item.Category != null ? item.Category.Name : "Kategorisiz")
                                    </span>
                                </td>
                                <td class="py-4 text-right pr-4">
                                    <a href="/Admin/Project/UpdateProject/@item.Id" class="size-8 rounded-full hover:bg-white/10 flex items-center justify-center text-slate-400 transition-colors inline-flex">
                                        <span class="material-symbols-outlined text-lg">edit</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="py-8 text-center text-slate-500">Henüz proje bulunmuyor.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
